class Solution {
    public int missingNumber(int[] nums) {
        Set<Integer> mySet = new HashSet<>();
        
        for(int num:nums) mySet.add(num);
        
        for(int i = 0; i <= nums.length + 1; i++) {
            if(!mySet.contains(i)) {
                return i;
            }
        }
        return - 1;
    }
} 
///////////////////////////////////////////////////////////

class Solution {
    public int missingNumber(int[] nums) {
        int missing = nums.length;
        for(int i = 0; i < nums.length; i++) {
            missing = missing ^ (i ^ nums[i]);
        }
        return missing;
    }
}
