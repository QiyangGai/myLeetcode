class Solution {
    public String removeDuplicates(String s) {
        char [] word = s.toCharArray();
        int index = -1;       
        for(int x = 0 ; x < word.length; x++){   
            if(index >= 0 && word[x] == word[index]){
               index--;
            }
            else{         
                word[++index] = word[x];
            }
        
        }
   
        return new String(word , 0, index+1);
    }
}
